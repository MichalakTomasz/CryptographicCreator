<UserControl x:Class="MD5Region.Views.ViewMD5"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MD5Region.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True" 
             Padding="15">
    <DockPanel>
        <GroupBox DockPanel.Dock="Top" Header="Text" Height="200">
            <StackPanel>
                <TextBox  MinWidth="100"
                          MinHeight="50"
                          Padding="50 10"
                          Margin="0 10"/>
                <Button Content="Create MD5 checksum"
                        Padding="10 0"
                        HorizontalAlignment="Right"
                        Command="{Binding GenerateChecksumCommand }" />
                <TextBox IsEnabled="False" 
                         MinWidth="200"
                         Height="70"
                         Margin="0 5"/>
            </StackPanel>
        </GroupBox>
    </DockPanel>
</UserControl>
